{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "outDir": "./dist/src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}